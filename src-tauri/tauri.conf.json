{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "modmanager",
	"version": "0.1.0",
	"identifier": "com.modmanager.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "modmanager",
				"center": true,
				"resizable": false,
				"maximizable": false,
				"width": 600,
				"height": 400,
				"visible": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
